#topbar
    .container
        .row
            .col-sm-9
                #topbar-title 
                    #topbar-title-1 Julien 
                    #topbar-title-2 Breiner
                ul.inline.margin
                    if current_user
                        if current_user.admin
                            li
                                a(href="/journal" class=menuItem=="journal"?false:"text-muted") 
                                    i.fa.fa-fw(class=menuItem=="journal"?"fa-book-open":"fa-book")
                                    |&nbsp;Journal
                            li
                                a(href="/expense" class=menuItem=="expense"?false:"text-muted") 
                                    i.fa.fa-fw.fa-euro-sign
                                    |&nbsp;Expenses
                            li
                                a(href="/people" class=menuItem=="people"?false:"text-muted") 
                                    i.fa.fa-fw.fa-user
                                    |&nbsp;People
                            li
                                a(href="#" class=menuItem=="place"?false:"text-muted") 
                                    i.fa.fa-fw.fa-globe-americas
                                    |&nbsp;Places
                            li
                                a(href="/event" class=menuItem=="event"?false:"text-muted") 
                                    i.fa.fa-fw.fa-calendar-alt
                                    |&nbsp;
                                    =t("event.menu.item")
                            li
                                a(href="/page" class=menuItem=="page"?false:"text-muted") 
                                    i.fa.fa-fw.fa-file-alt
                                    |&nbsp;Pages
                            li
                                a(href="/list" class=menuItem=="list"?false:"text-muted") 
                                    i.fa.fa-fw.fa-list-ul
                                    |&nbsp;Lists
            .col-sm-3.text-right
                ul.inline.margin
                    if current_user
                        li
                            a.btn.text-muted(href="/logout")
                                i.fa.fa-sign-out-alt
                    else
                        li
                            a.btn.text-muted(href="/login")
                                i.fa.fa-sign-in-alt