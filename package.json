  "scripts": {
    "test": "jest",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon --ignore **/*.json",
    "watch-js": "watchify src/assets/js/index.ts -v -p tsify -o dist/assets/js/index.js",
    "watch-sass": "node-sass -w src/sass/main.scss dist/assets/css/main.css --include-path node_modules/@fortawesome/fontawesome-free/scss/ --include-path src/sass/ --include-path node_modules/chartist/dist/scss/ --include-path node_modules/bootstrap-toggle/css",
    "w": "concurrently -kp \"[{name}]\" -n \"TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,red\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\""
  },
